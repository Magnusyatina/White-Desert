<?xml version="1.0" encoding="utf-8"?>


    <FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/cold_1mdpi"
        tools:context="com.example.serge.test1.MainActivity"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:animateLayoutChanges="true">
        <ScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:id="@+id/textArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
        </ScrollView>

        <LinearLayout
            android:layout_marginTop="400dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">



            <ScrollView
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:layout_weight="0.80">
                <LinearLayout
                    android:id="@+id/questionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

            <ImageButton
                android:id="@+id/button2"
                android:background="@null"
                android:src="@drawable/bag"
                android:onClick="switchBag"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/inventory"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:weightSum="4"
        style="@style/InventoryTheme"

        >

        <TextView
            android:id="@+id/TitleInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"/>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
              android:background="#c2e0f1"
            ></View>>
        <LinearLayout
            android:id="@+id/ContainsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            ></LinearLayout>>
    </LinearLayout>>

</FrameLayout>



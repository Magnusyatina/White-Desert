<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        android:id="@+id/wait_anim_pressed"
        android:drawable="@drawable/vd_wait"
       />
    <item
        android:id="@+id/wait_anim"
        android:drawable="@drawable/vd_wait"
        app:state_waiting="true"/>

    <transition
        android:fromId="@id/wait_anim_pressed"
        android:toId="@id/wait_anim"
        android:drawable="@drawable/avd_wait_anim"

        />
    <transition
        android:fromId="@id/wait_anim"
        android:toId="@id/wait_anim_pressed"
        android:drawable="@drawable/avd_wait_anim"
        />

</animated-selector>
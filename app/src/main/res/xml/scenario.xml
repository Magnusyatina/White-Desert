<?xml version="1.0" encoding="utf-8"?>
<scenario>
    <stage id="start">
        <message text="Алл.. меня кто..удь слы..т"/>
        <message text="К..будь, отве..е"/>
        <message text="Мн... нуж..а помощ.."/>
        <random_event target="random_event1"/>
        <questions>
            <case text="Слишком плохая связь, вы обрываетесь!" target="repair_communication1"/>
            <case text="Вас очень плохо слышно!" target="repair_communication1"/>
            <case text="Разожги костер!" need_item="1"/>
        <case text="Заблокированный овтет" target="blaskovich"/>
        </questions>
    </stage>

    <stage id="random_event1">
        <message text="А, подожди, что происходит"/>
        <message text="Почему так холодно"/>
        <message text="Это невыносимо"/>
    </stage>>

    <stage id="repair_communication1">
        <message text="Я по..л, по..о..ите, я ...бую ка..будь ..лить сигн.."/>
        <waiting value="5000"/>
        <message text="Так лучше?"/>
        <music title="main_theme_2"/>
        <questions>
            <case text="Да, лучше, что у вас случилось?" target="djozef_info1"/>
            <case text="Намного. Но кто вы?" target="djozef_info2"/>
        </questions>
    </stage>
    <stage id="die">
        <important_message text="Связь с Джозефом потеряна"/>
        <questions>
             <case text="Начать заново" target="start"/>
        </questions>
    </stage>
    <stage id="djozef_info1">
        <message text="Меня зовут Джозеф."/>
        <message text="Я совершал плановый полет на своем самолете..."/>
        <message text="Не знаю, что произошло, но я потерял управление..."/>
        <message text="В итоге самолет потерпел крушение!"/>
        <message text="Я даже не знаю, где я нахожусь..."/>
        <questions>
            <case text="Что ты видишь вокруг себя?" target="description_of_the_place"/>
            <case text="Успокойся, я постараюсь тебе помочь. Хорошо? " target="helpyou"/>
        </questions>
    </stage>
    <stage id="djozef_info2">
        <message text="Меня зовут Джозеф."/>
        <message text="Я пилот на станции Мильскор."/>
        <message text=""/>
        <message text="В итоге самолет потерпел крушение!"/>
        <message text="Я даже не знаю, где я нахожусь..."/>
        <questions>
            <case text="Что ты видишь вокруг себя?" target="description_of_the_place"/>
            <case text="Как твое самочувствие? С тобой все в порядке?" target="condition"/>
        </questions>
    </stage>
    <stage id="helpyou">
        <message text="Я уже успокоился, пока пытался связаться хоть с кем-нибудь"/>
        <message text="Хорошо что хоть кто-то уловил мой сигнал..."/>
        <message text="Теперь мои шансы выжить не нулевые"/>
        <message text="Будто камень с плечь"/>
        <questions>
            <case text="Ты можешь описать место, где ты находишься?" target="description_of_the_place"/>
            <case text="Как ты себя чувствуешь?" target="condition"/>
        </questions>
    </stage>
    <stage id="description_of_the_place">
        <message text="Я не знаю, что это за место"/>
        <message text="Вогруг один снег"/>
        <message text="Погоди, мне нужно осмотреться..."/>
        <waiting value="15000"/>
        <message text="Нет, абсолютно ничего, кроме моего разбитого самолета"/>
        <questions>
            <case text="Попробуй найти что-нибудь полезное!" target="find_item1"/>
            <case text="Тебе не холодно?" target="condition_about_cold"/>
        </questions>>
    </stage>>
    <stage id="condition">
        <message text="Если не считать моего подавленного состояния"/>
        <message text="То мне очень холодно"/>
        <message text="Хорошо еще то, что после крушения я остался целым и невредимым"/>
        <message text="Иначе так бы и помер..."/>
        <questions>
            <case text="Попробуй разжечь костер!" need_item="1" target="kindling_a_fire_next_to_the_plane"/>
            <case text="Найди укрытие!" target="shelter_search"/>
            <case text="Обыщи округу, может сможешь найти полезные предметы" target="find_item1"/>
        </questions>
    </stage>>
    <stage id="condition_about_cold">
        <message text="Очень"/>
        <message text="Я точно не уверен, но по ощущения около -30"/>
        <message text="Надо поскорее согреться"/>
        <message text="Иначе превращусь в ледышку!"/>
        <questions>
            <case text="Попробуй разжечь костер!" need_item="1" target="kindling_a_fire_next_to_the_plane"/>
            <case text="Попробуй найти укрытие и отдохнуть" target="shelter_search"/>
            <case text="Обыщи округу" target="find_item1"/>
        </questions>
    </stage>>
    <stage id="find_item1">
        <message text="Да, так и поступлю"/>
        <message text="Надеюсь мне повезет и я смогу найти коробку со спичками"/>
        <message text="Пожелай мне удачи!"/>
        <message text="Через пару минут отпишусь"/>
        <waiting value="120000"/>
        <message text="Отлично, я нашел спички! Будет теперь с помощью чего я смогу разжечь костер"/>
        <add_item item="1"/>
        <questions>
            <case text="Попробуй разжечь костер!" target="kindling_a_fire_next_to_the_plane"/>
            <case text="Есть идеи, что ты будешь делать дальше?" target="kindling_a_fire_net_to_the_plane"/>
        </questions>
    </stage>
    <stage id="kindling_a_fire_net_to_the_plane">
        <message text="Да, для начала нужно разжечь костер"/>
        <message text="Вроде как место для укрытия я нашел"/>
        <message text="Возле него и разожгу костер"/>
        <message text="Только надо поторопится, а то я почти превратился в ходячую сосульку"/>
        <message text="Еще чуть-чуть и все"/>
        <message text="Может твои теплые слова смогут меня немного согреть?"/>
        <questions>
            <case text="Тебе бы по меньше болтать, а то действительно замерзнешь" target="wonderful jokes_01"/>
            <case text="Почему сразу я? Может что сам расскажешь? Например, всегда ли ты попадаешь в такие передряги?" target="wonderful_jokes_02"/>
        </questions>>
    </stage>>
    <stage id="shelter_search">
        <message text="Да, хорошая идея"/>
        <message text="Как раз наберусь сил перед тем, как уйти отсюда"/>
        <die/>
    </stage>>


</scenario>
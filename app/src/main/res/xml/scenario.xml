<?xml version="1.0" encoding="utf-8"?>
<scenario>
    <stage id="start">
        <message text="Алл.. меня кто..удь слы..т"/>
        <message text="К..будь, отве..е"/>
        <message text="Мн... нуж..а помощ.."/>
        <questions>
            <case text="Слишком плохая связь, вы обрываетесь!" target="repair_communication1"/>
            <case text="Вас очень плохо слышно!" target="repair_communication1"/>
        </questions>
    </stage>

    <stage id="random_event1">
        <message text="А, подожди, что происходит"/>
        <message text="Почему так холодно"/>
        <message text="Это невыносимо"/>
    </stage>>

    <stage id="repair_communication1">
        <message text="Се...унду"/>
        <waiting value="5000"/>
        <message text="Так лучше?"/>
        <music title="main_theme_2"/>
        <questions>
            <case text="Да, лучше, что у вас случилось?" target="djozef_info1"/>
            <case text="Намного. Но кто вы?" target="djozef_info2"/>
        </questions>
    </stage>
    <stage id="die">
        <important_message text="Связь с Джозефом потеряна"/>
        <questions>
             <case text="Начать заново" target="start"/>
        </questions>
    </stage>
    <stage id="djozef_info1">
        <message text="Меня зовут Джозеф."/>
        <message text="Я совершал плановый полет на своем самолете..."/>
        <message text="Не знаю, что произошло."/>
        <message text="Я увидел вспышку перед собой и начал терять управление"/>
        <message text="Возможно произошло возгорание двигателя"/>
        <message text="В итоге самолет потерпел крушение!"/>
        <message text="Я даже не знаю, где нахожусь..."/>
        <questions>
            <case text="Что ты видишь вокруг себя?" target="description_of_the_place"/>
            <case text="Успокойся, я постараюсь тебе помочь. Хорошо? " target="helpyou"/>
        </questions>
    </stage>
    <stage id="djozef_info2">
        <message text="Меня зовут Джозеф."/>
        <message text="Я пилот на станции Мильскор."/>
        <message text="Совершал плановый полет"/>
        <message text="В итоге самолет потерпел крушение!"/>
        <message text="Я даже не знаю, где я нахожусь..."/>
        <questions>
            <case text="Что ты видишь вокруг себя?" target="description_of_the_place"/>
            <case text="Как твое самочувствие? С тобой все в порядке?" target="condition"/>
        </questions>
    </stage>
    <stage id="helpyou">
        <message text="Я уже успокоился, пока пытался связаться хоть с кем-нибудь"/>
        <message text="Хорошо что хоть кто-то уловил мой сигнал..."/>
        <message text="Теперь мои шансы выжить не нулевые"/>
        <message text="Будто камень с плечь"/>
        <questions>
            <case text="Ты можешь описать место, где ты находишься?" target="description_of_the_place"/>
            <case text="Как ты себя чувствуешь?" target="condition"/>
        </questions>
    </stage>
    <stage id="description_of_the_place">
        <message text="Я не знаю, что это за место"/>
        <message text="Вогруг один снег"/>
        <message text="Погоди, мне нужно осмотреться..."/>
        <waiting value="15000"/>
        <message text="Нет, абсолютно ничего, кроме моего разбитого самолета"/>
        <questions>
            <case text="Попробуй найти что-нибудь полезное!" target="find_item1"/>
            <case text="Тебе не холодно?" target="condition_about_cold"/>
        </questions>>
    </stage>>
    <stage id="condition">
        <message text="Если не считать моего подавленного состояния"/>
        <message text="То мне очень холодно"/>
        <message text="Хорошо еще то, что после крушения я остался целым и невредимым"/>
        <message text="Иначе так бы и помер..."/>
        <questions>
            <case text="Попробуй разжечь костер!" need_item="1" target="kindling_a_fire_next_to_the_plane"/>
            <case text="Найди укрытие!" target="shelter_search"/>
            <case text="Обыщи округу, может сможешь найти полезные предметы" target="find_item1"/>
        </questions>
    </stage>>
    <stage id="condition_about_cold">
        <message text="Очень"/>
        <message text="Я точно не уверен, но по ощущения около -30"/>
        <message text="Надо поскорее согреться"/>
        <message text="Иначе превращусь в ледышку!"/>
        <questions>
            <case text="Попробуй разжечь костер!" need_item="1" target="kindling_a_fire_next_to_the_plane"/>
            <case text="Попробуй найти укрытие и отдохнуть" target="shelter_search"/>
            <case text="Обыщи округу" target="find_item1"/>
        </questions>
    </stage>>
    <stage id="find_item1">
        <message text="Да, так и поступлю"/>
        <message text="Надеюсь мне повезет и я смогу найти что-нибудь полезное"/>
        <message text="Пожелай мне удачи!"/>
        <message text="Через пару минут отпишусь"/>
        <waiting value="120000"/>
        <message text="Одни обломки, все разбросано в разные стороны..."/>
        <message text="Успел рассмотреть двигатель."/>
        <message text="Его разворотило так, что я даже не знаю, что и сказать..."/>
        <message text="Но я нашел спички! Будет теперь с помощью чего разжечь костер"/>
        <add_item item="1"/>
        <questions>
            <case text="Попробуй разжечь костер!" target="kindling_a_fire_net_to_the_plane"/>
            <case text="Есть идеи, что ты будешь делать дальше?" target="kindling_a_fire_net_to_the_plane"/>
        </questions>
    </stage>
    <stage id="kindling_a_fire_net_to_the_plane">
        <message text="Да, для начала нужно разжечь костер"/>
        <message text="Вроде как место для укрытия я нашел"/>
        <message text="Возле него и разожгу костер"/>
        <message text="Только надо поторопиться, а то я почти превратился в ходячую сосульку"/>
        <message text="Еще чуть-чуть и все"/>
        <questions>
            <case text="Тебе бы по меньше болтать, а то действительно замерзнешь" target="wonderful jokes_01"/>
            <case text="Ты часто попадаешь в такие передряги?" target="wonderful_jokes_02"/>
        </questions>>
    </stage>>
    <stage id="wonderful_jokes_02">
        <message text="Представь себе, каждый день происходит нечто ужасное"/>
        <questions>
            <case text="Да?" target="wonderful_jokes_01_01"/>
            <case text="Хоть ты и на волоске от смерти, но острить все еще можешь..." target="wonderful_jokes_01_02"/>
        </questions>>
    </stage>>
    <stage id="wonderful_jokes_01_01">
        <message text="Нет"/>
        <stage_jump target="fall_asleep_and_wake_up" />
    </stage>>
    <stage id="wonderful_jokes_01_02">
        <message text="Главное не терять самообладание."/>
        <message text="А оптимизм еще никому не навредил"/>
        <stage_jump target="fall_asleep_and_wake_up"/>
    </stage>>

    <stage id="fall_asleep_and_wake_up">
        <message text="Блин, уже 3 спичку сжег."/>
        <message text="На морозе не так то и просто это делать."/>
        <message text="Так, почти, ну же..."/>
        <message text="Да, отлично, у меня вышло!"/>
        <message text="Теперь смогу согреться и отдохнуть."/>
        <message text="Надеюсь, что где-то неподалеку люди."/>
        <message text="Они увидят свечение от моего костра."/>
        <message text="И смогут найти меня..."/>
        <message text="Хорошо, когда есть чем согреться."/>
        <message text="Я наверное отдохну немного."/>
        <message text="А то я уже сильно устал."/>
        <message text="Как отдохну, отпишусь"/>
        <waiting time="3600000"/>
        <message text="Так, так, так, у меня две новости!"/>
        <message text="Одна из них хорошая, другая тревожная..."/>
        <message text="С какой начать?"/>
        <questions>
            <case text="Давай хорошую" target="good_news_01"/>
            <case text="Плохую" target="bad_news_01"/>
        </questions>>
    </stage>>
    <stage id="good_news_01">
        <message text="Ну, я нашел компас!"/>
        <message text="Хорошо, что его не засыпало снегом."/>
        <message text="И был на самом видном месте."/>
        <message text="Да я его и затоптать мог..."/>
        <message text="Хорошо, что этого не произошло."/>
        <questions>
            <case text="А ты не можешь ориентироваться по местности?" target="good_news_01_01"/>
            <case text="А какая плохая новость?" target="good_news_01_02"/>
        </questions>>
    </stage>
    <stage id="good_news_01_01">
        <message text="Могу."/>
        <message text="По положению солнца."/>
        <message text="Только тучи слишком густые."/>
        <message text="А сейчас где-то полдень."/>
        <message text="Затруднительно будет определить стороны света."/>
        <message text="А теперь тревожная новость."/>
        <stage_jump target="good_news_bad_news"/>
    </stage>>
    <stage id="good_news_01_02">
        <message text="Это не плохая."/>
        <message text="Скорее тревожная"/>
        <stage_jump target="good_news_bad_news"/>
    </stage>>

    <stage id="good_news_bad_news">
        <message text="Мне кажется, что здесь кто-то был."/>
        <message text="И я бы не говорил это."/>
        <message text="Если бы не пропало несколько пайков."/>
        <message text="Сейчас бы еще проблемы с пропитанием ко всему прочему добавить..."/>
        <questions>
            <case text="Ты в этом уверен? Осматривал округу?" target="good_news_bad_news_01"/>
            <case text="Может какой-то зверь забрел? Следы?" target="good_news_bad_news_02"/>
        </questions>
    </stage>>

    <stage id="bad_news_01">
        <message text="Ну, это не плохая..."/>
        <message text="А тревожная, как я уже сказал."/>
        <message text="Мне кажется, что здесь кто-то был."/>
        <message text="И я бы не говорил это."/>
        <message text="Если бы не пропало несколько пайков."/>
        <message text="Сейчас бы еще проблемы с пропитанием ко всему прочему добавить..."/>
        <questions>
            <case text="Ты в этом уверен? Осматривал округу?" target="bad_news_01_01"/>
            <case text="Может какой-то зверь забрел? Следы?" target="bad_news_01_02"/>
        </questions>
    </stage>>
    <stage id="bad_news_01_01">
        <message text="Да, я осмотрелся."/>
        <message text="Ни следов, ни других признаков пребывания кого-либо я не обнаружил."/>
        <message text="Но даже так, это очень настораживает."/>
        <message text="Может все это мне показалось."/>
        <message text="Из-за переизбытка волнения."/>
        <message text="А паек просто затерялся в снегах."/>
        <stage_jump target="bad_news_good_news"/>
    </stage>>
    <stage id="bad_news_01_02">
        <message text="Если это так, то я должен быть настороже."/>
        <message text="Следов, к сожалению или к счастью, я не смог обнаружить."/>
        <message text="Возможно их замело снегом."/>
        <message text="Надеюсь это не хищники"/>
        <message text="Как думаешь, кто это мог быть?"/>
        <questions>
            <case text="Медведь?" target="you_are_crazy"/>
            <case text="Волк?" target="you_are_crazy"/>
        </questions>>
    </stage>>
    <stage id="you_are_crazy">
        <message text="Вот."/>
        <message text="Чую мне будет сложно с тобой."/>
        <message text="Ты же видишь, что я надеюсь на хорошее."/>
        <message text="А ты сразу начинаешь подкидывать мне плохие варианты."/>
        <stage_jump target="bad_news_good_news"/>
    </stage>>
    <stage id="bad_news_good_news">
        <message text="Но ладно."/>
        <message text="Хватит о тревожном"/>
        <message text="Теперь хорошая новость."/>
        <message text="Я нашел компас."/>
        <message text="Хорошо что он не затерялся в снегах."/>
        <questions>
            <case text="Разве ты не можешь ориентироваться по положению солнца?" target="info_about_compas"/>
            <case text="Может лучше еще подождать, вдруг за тобой уже выслали помощь?" target="stay_in_place"/>
            <case text="Я думаю, пора уходить с этого места" target="preparation_for_care_01"/>
        </questions>>
    </stage>
    <stage id="info_about_compas">
        <message text="Конечно же я знаю, где юг, а где север."/>
        <message text="Просто с такой погодой ничего не получится понять."/>
        <message text="А компас вернее укажет стороны света."/>
        <message text="Так что, думаю, пора двигать."/>
        <questions>
            <case text="Может лучше еще подождать, вдруг за тобой уже выслали помощь?" target="stay_in_place"/>
            <case text="Да, решил уже в какую сторону тебе стоит идти?" target="preparation_for_care_01"/>
        </questions>>
    </stage>>
    <stage id="stay_in_place">
        <message text="Думаешь?"/>
        <message text="Если так подумать."/>
        <message text="То в твоих словах есть смысл."/>
        <message text="Все таки рядом со мной куча обломков самолета."/>
        <message text="И такое сложно не заметить."/>
        <message text="Думаю, стоит немного подождать."/>
        <waiting time="3600000"/>
        <random_event target="stay_in_place_still_alive" chance="85"/>
        <message text="Как же..."/>
        <message text="Холодно..."/>
        <message text="Кажется, это была плохая идея..."/>
        <die/>
    </stage>
    <stage id="stay_in_place_still_alive">
        <message text="Нет."/>
        <message text="Больше ждать нельзя."/>
        <message text="Может меня и не ищут вовсе."/>
        <message text="Или ищут, но в другом месте."/>
        <questions>
            <case text="Ну, так что ты решил?" target="preparation_for_care_01"/>
            <case text="В какую сторону пойдешь?" target="preparation_for_care_01"/>
        </questions>>
    </stage>
    <stage id="preparation_for_care_01">
        <message text="Да, пора собираться."/>
        <message text="Долго здесь засиживаться нельзя."/>
        <message text="Вряд ли я дождусь помощи."/>
        <message text="Если буду сидеть и ждать"/>
        <message text="И так, у меня есть два варианта."/>
        <message text="Либо идти на север."/>
        <message text="Где находится моя станция."/>
        <message text="Либо на юг."/>
        <message text="В сторону городского поселения."/>
        <questions>
            <case text="Север."  target="north_choice"/>
            <case text="На юг." target="south choice"/>
            <case text="А сам что думаешь по этому поводу?" target="info_about_the_choice"/>
        </questions>
    </stage>>
    <stage id="info_about_the_choice">
        <message text="Моя чуйка подсказывает идти мне в сторону моей базы."/>
        <message text="Но мне не нравятся сгущающиеся тучи в небе в той стороне."/>
        <message text="Может я попаду под сильный буран."/>
        <message text="И, тогда, мои шансы выжить сведутся на нет!"/>
        <message text="Но до городского поселения достаточно далеко."/>
        <message text="И я могу просто слечь из-за усталости, изнеможения или голода."/>
        <message text="Если город окажется слишком далеко."/>
        <questions>
            <case text="Давай, все же, на север." target="north_choice"/>
            <case text="На юг!" target="south choice"/>
        </questions>>
    </stage>>
    <stage id="north_choice">
        <message text="Хорошо."/>
        <message text="Все припасы собрал."/>
        <message text="Ничего не забыл."/>
        <message text="Тогда в путь!"/>
        <waiting time="1200000"/>
        <message text="Становится все холоднее и холоднее."/>
        <message text="Тучи все сгущаются."/>
        <message text="И на горизонте ничего не видно."/>
        <message text="А так же у меня дурное предчуствие."/>
        <message text="Будто меня кто-то преследует."/>
        <message text="Хоть я никого и не вижу."/>
        <message text="Пройду еще немного и отпишусь."/>
        <waiting time="720000"/>
        <message text="Уже не уверен, что иду в правильном направлении."/>
        <message text="И уже стемнело"/>
        <message text="Так быстро? Странно это."/>
        <message text="Я могу продолжать идти."/>
        <message text="Или отдохнуть здесь какое-то время"/>
        <message text="Что думаешь?"/>
        <questions>
            <case text="Отдохни" target="north_choice_01"/>
            <case text="Продолжай идти" target="north_choice_bad_choice"/>
        </questions>>
    </stage>>
    <stage id="shelter_search">
        <message text="Да, хорошая идея!"/>
        <message text="Но для начала, нужно развести костер."/>
        <message text="Иначе замерзну."/>
        <questions>
            <case text="А у тебя есть, чем развести костер?" target="shelter_search_01"/>
            <case text=""/>
        </questions>>
        <die/>
    </stage>>


</scenario>